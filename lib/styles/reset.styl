reset-space()
  pa 0
  ma 0
  bd 0

reset-font()
  fz 100%
  fw n
  fs n
  ff ext
  lh 1
  va base

reset-theme()
  bgc a0
  cc ext

reset-body(ff, fz, lh, cc, bgc)
  body
    ff ff
    fz fz
    lh lh
    cc cc bgc
    ovx h
    ovy a
    pad 0
    mar 0

reset-box()
  html
    box bdbox
  *, *:before, *:after
    box ext

reset-list()
  lity no

  &
  & > li
    reset-space()


reset-a()
  a
    dis ib
    cc ext
    td none


export-reset()

  /// Var.
  
  $base-ff = "Helvetica Neue", "Helvetica", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", "Arial", "sans-serif"
  $base-fz = 16px
  $base-lh = 1.5
  $base-cc = #222
  $base-bg = #f5f5f5

  reset-box()
  
  reset-body(
    $base-ff,
    $base-fz,
    $base-lh,
    $base-cc,
    $base-bg
  )

  reset-a()
